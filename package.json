{
  "name": "base-express",
  "version": "1.0.0",
  "description": "Skeleton api using expressjs",
  "main": "index.js",
  "repository": "https://github.com/hiraqdev/base-express",
  "author": "Hiraq <hiraq.dev@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist/ && babel ./ --out-dir dist/ --ignore ./node_modules,./.babelrc,./package.json,./npm-debug.log,./yarn.lock,./LICENSE,./README --copy-files",
    "api": "yarn run build && node -r dotenv/config dist/src/app.js",
    "standard": "standard 'src/**/*.js'",
    "summary": "standard 'src/**/*.js' | standard-summary"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "helmet": "^3.12.1",
    "http-status-codes": "^1.3.0",
    "mongoose": "^5.1.5",
    "morgan": "^1.9.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "jest": "^23.6.0",
    "rimraf": "^2.6.2",
    "standard": "^11.0.1",
    "standard-summary": "^1.0.0"
  }
}
